{{ 'custom-header.css' | asset_url | stylesheet_tag }}
{{ 'custom-header.js' | asset_url | script_tag }}
<header class="rr-custom-header">
  <button class="rr-menu-button" onclick="toggleMenu()">☰</button>
  {% if section.settings.logo %}
    <div class="img-logo">
      <img src="{{ section.settings.logo |  image_url: width: 600  }}" alt="logo">
    </div>
  {% else %}
    <div class="rr-logo">Your Logo</div>
  {% endif %}

  <div class="rr-center-text">
    {{ section.settings.header_middle_text }}</div>

  {% render 'custom-button'
    , 
 button_text: section.settings.button_text
    , 
 button_link: section.settings.button_link
    , 
 button_color: section.settings.button_color
    , 
 button_hover_color: section.settings.button_hover_color
  %}
</header>

<div class="rr-mobile-menu" id="mobile-menu">
  <button class="rr-close-menu" onclick="toggleMenu()">×</button>
  <nav>
    <ul>
      <li><a href="#">Menu Item 1</a></li>
      <li><a href="#">Menu Item 2</a></li>
      <li><a href="#">Menu Item 3</a></li>
    </ul>
  </nav>
</div>

{% schema %}
  {
    "name": "Custom Header",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Upload Logo"
      },
      {
        "type": "text",
        "id": "header_middle_text",
        "label": "Write Middle text for header",
        "default": "Find the ideal gift for your loved ones."
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "This is a custom section"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "choose gift",
        "info": "Text to display on the button"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button Link",
        "info": "URL to link the button"
      }, {
        "type": "color",
        "id": "button_color",
        "label": "Button Color",
        "default": "#fff544"
      }, {
        "type": "color",
        "id": "button_hover_color",
        "label": "Button Hover Color",
        "info": "Color of the button when hovered",
        "default": "#000"
      }
    ],
    "presets": [
      {
        "name": "Custom Header",
        "category": "Custom",
        "blocks": []
      }
    ]
  }
{% endschema %}