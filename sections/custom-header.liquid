<header class="rr-custom-header">
  <div class="rr-logo">Your Logo</div>
  <div class="rr-center-text">Your Center Text
</div>
  {% comment %} <button class="rr-icon-button rr-wrapper">
                                <a href="#" class="rr-button__link">
                                  <span>choose gift
                                    <i class="fa-solid fa-arrow-right-long rr-arrow"></i>
                                  </span>
                                </a>
                </button> {% endcomment %}

  {% render 'custom-button'
    ,
 button_text: section.settings.button_text
    ,
 button_link: section.settings.button_link
    ,
 button_color: section.settings.button_color
    ,
 button_hover_color: section.settings.button_hover_color
  %}
</header>


{% schema %}
  {
    "name": "Custom Header",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "This is a custom section"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "Learn More",
        "info": "Text to display on the button"

      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button Link",
        "info": "URL to link the button"
      },
      {
        "type": "color",
        "id": "button_color",
        "label": "Button Color",
        "default": "#fff544"
      }, {
        "type": "color",
        "id": "button_hover_color",
        "label": "Button Hover Color",
        "info": "Color of the button when hovered",
        "default": "#000"
      }
    ],
    "presets": [
      {
        "name": "Custom Header",
        "category": "Custom",
        "blocks": []
      }
    ]
  }

{% endschema %}