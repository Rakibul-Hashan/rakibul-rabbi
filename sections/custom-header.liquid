<header class="custom-header">
  <div class="custom-header__logo">
    {% if section.settings.logo %}
      <img src="{{ section.settings.logo | img_url: 'master' }}" alt="Logo">
    {% endif %}
  </div>
  <div class="custom-header__announcement">
    <p>{{ section.settings.announcement }}</p>
  </div>
  <div class="custom-header__button">
    <a href="{{ section.settings.button_url }}" class="btn">{{ section.settings.button_text }}</a>
  </div>
</header>

<style>
  .custom-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20px;
    background-color: #f0f0f0; /* Adjust as needed */
  }
  .custom-header__logo img {
    max-width: 100px; /* Adjust logo size */
  }
  .custom-header__announcement {
    text-align: center;
    flex-grow: 1;
  }
  .custom-header__button {
    margin-left: auto;
  }
</style>

{% schema %}
{
  "name": "Custom Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "text",
      "id": "announcement",
      "label": "Announcement"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    }
  ]
}
{% endschema %}
